<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/coba"
    tools:context="informatikasttg.leb.uasndroid.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/menumi"
        android:text="menumi"
        android:background="@color/colorPrimary" />

    <Button
        android:text="logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/logout"
        android:textColor="@android:color/background_light"
        android:background="@android:color/background_dark" />

    <Button
        android:text="tentang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tentang"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="ranjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ranjang"
        android:layout_below="@+id/cibiuk"
        android:layout_alignLeft="@+id/cibiuk"
        android:layout_alignStart="@+id/cibiuk"
        android:layout_marginTop="60dp"
        android:background="@color/colorPrimary" />

    <Button
        android:text="ceplak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ceplak"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/ranjang"
        android:layout_alignLeft="@+id/ranjang"
        android:layout_alignStart="@+id/ranjang"
        android:background="@color/colorPrimary" />

    <Button
        android:text="cibiuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cibiuk"
        android:layout_below="@+id/menumi"
        android:layout_alignLeft="@+id/menumi"
        android:layout_alignStart="@+id/menumi"
        android:layout_marginTop="51dp"
        android:background="@color/colorPrimary" />

</RelativeLayout>
